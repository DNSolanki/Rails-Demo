<!DOCTYPE html>
<html>
<head>
  <title>Articles List</title>
</head>
<body> 
  <h1>Articles List</h1>
  <%= link_to 'New Article', new_article_path %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= link_to 'Show', article_path(article) %>&nbsp;
            <%= link_to 'Edit', edit_article_path(article) %>&nbsp;
            <%= link_to 'Delete', article_path(article), 
                method: :delete,
                data: {confirm: 'Are you sure?'} %>
          </td>

          
        </tr>
      <% end %>
    </tbody>
  </table>
</body>
</html>